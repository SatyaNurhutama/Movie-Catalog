<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.satya.subjetpack1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SubJetpack1"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ui.home.HomeActivity"
            android:label="@string/title_activity_home">


        </activity>
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.detail.tvshow.DetailTvActivity"
            android:label="@string/title_activity_detail_tv"
            android:parentActivityName=".ui.home.HomeActivity"
            android:theme="@style/Theme.SubJetpack1.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.satya.subjetpack1.ui.home.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.detail.movie.DetailMovieActivity"
            android:label="@string/title_activity_detail_movie"
            android:parentActivityName=".ui.home.HomeActivity"
            android:theme="@style/Theme.SubJetpack1.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.satya.subjetpack1.ui.home.HomeActivity" />
        </activity>
    </application>

</manifest>